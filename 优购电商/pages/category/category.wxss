/* pages/category/category.wxss */
page{
    height: 100%;
}
.cates{
    height: 100%;
}
/* 使容器高度固定为页面高度减去搜索框高度，以免上下滑动 */
.cates_container{
    height: calc(100vh - 90rpx);
    display: flex;
}
.left_menu{
    /* 左右两边的比例 flex子元素默认充满空间，即高度100% */
    flex: 2;
    /* background-color: red; */
}
.right_content{
    flex: 5;
    /* background-color: green; */
}
.menu_item{
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
}
.goods_list{
    display: flex;
    flex-wrap: wrap;
}
.goods_list navigator{
    width: 33.33%;
    text-align: center;
}
.goods_list navigator image{
   width: 50%;
}
.goods_title{
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.delimiter{
    color: #ccc;
    padding: 0 10rpx;
}
.active{
    color:var(--themeColor);
    /* currentColor顾名思意就是“当前颜色”，准确讲应该是“当前的文字颜色”， */
    border-left:5rpx solid currentColor
}